{% if active_page is not defined %}{% set active_page = '' %}{% endif %}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>Site</title>

        {% block css %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
        <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto:400,500,700,300'>
        <link rel="stylesheet" href="{{ relative_url('css/style.css') }}">
        {% endblock %}

        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>

        {% block topnav %}{% include "includes/topnav.html.twig" %}{% endblock %}
        {% block leftnav %}{% include "includes/leftnav.html.twig" %}{% endblock %}
        {% block body %}
            <div class="container-fluid content">
                <div class="row">

                    {% block pageheader %}
                    <div class="col-xs-12">

                        <h1>
                            <small></small>
                        </h1>
                        {#
                        {% if messages %}
                        <div class="messages">
                            {% for message in messages %}
                            <div{% if message.tags %} class="alert alert-{{ message.tags }}"{% endif %}>{{ message }}</div>
                            {% endfor %}
                        </div>
                        {% endif %}
                        #}
                    </div>
                    {% endblock %}
                </div>

                <br/>

                {% block content %}{% endblock %}
            </div>
        {% endblock %}
    </body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</html>
