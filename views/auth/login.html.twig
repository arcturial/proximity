{% extends "layout/main.html.twig" %}

{% block topnav %}{% endblock %}
{% block leftnav %}{% endblock %}

{% block body %}

<div class="login">

    <h1>
        Login to your account
    </h1>

    <form method="post">

        <div class="form-group">
            <label for="auth[email]" class="control-label">Email</label>
            <input type="email" class="form-control" name='auth[email]'>
        </div>

        <div class="form-group">
            <label for="auth[password]" class="control-label">Password</label>
            <input type="password" class="form-control" name='auth[password]'>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </div>
    </form>

</div>

{% endblock %}
