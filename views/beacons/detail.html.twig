{% set active_page = 'beacons' %}

{% extends "layout/main.html.twig" %}

{% block content %}
<div class="row">
    <div class="col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">Register Beacon</div>

            <form method="post">

            <div class="panel-body">

                <div class="form-group">
                    <label for="beacon[description]" class="control-label">Description</label>
                    <input type="text" class="form-control" name='beacon[description]'>
                </div>

                <div class="form-group">
                    <label for="beacon[namespace]" class="control-label">Namespace</label>
                    <input type="text" class="form-control" name='beacon[namespace]'>
                </div>

                <div class="form-group">
                    <label for="beacon[instanceId]" class="control-label">Instance ID</label>
                    <input type="text" class="form-control" name='beacon[instanceId]'>
                </div>

            </div>

            <div class="panel-footer text-right">
                <button type="submit" class="btn btn-primary">Register Beacon</button>
            </div>

            </form>

        </div>
    </div>
</div>
{% endblock %}